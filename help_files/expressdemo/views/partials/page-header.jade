doctype html
html(lang="en")
    head
        title= pageTitle

        // metadata
        meta(name="keyword", content="training, jade, template, node")
        meta(name="description", content="A simple page template in Jade")
        meta(name="viewport", content="initial-scale=1, user-scalable=no, minimum-scale=1, maximum-scale=1")

        //styles
        link(rel="styleSheet", href="lib/bootstrap/css/bootstrap.min.css")
        link(rel="styleSheet", href="lib/bootstrap/css/bootstrap-theme.min.css")
        link(rel="styleSheet", href="css/styles.css")

        // scripts
        script(type="text/javascript", src="lib/jquery/jquery.min.js")
        script(type="text/javascript", src="lib/bootstrap/js/bootstrap.min.js")
        block pageScripts
    body
        .container-fluid
            block header
            .row
                .col-md-6.col-md-offset-3.col-xs-10.col-xs-offset-1
                    block content